<Main>:
    orientation: 'vertical'
    Label:
        text: 'Client'
        font_size: '30sp'
        size_hint_y: '0.1'
    Camera:
        id: camera
        resolution: (1920, 1080)
        play: False
    ToggleButton:
        text: 'Start camera'
        on_press: root.play()
        size_hint_y: None
        height: '48dp'
    ToggleButton:
        text: 'Send data to Kinesis Video Stream'
        on_press: root.send_data_to_kinesis()
        size_hint_y: None
        height: '48dp'